<%= form_with model: article do |form| %>
<% if article.errors.any? %>
  <h2><%= pluralize(article.errors.count,"error") %> prevented article from being saved</h2>

  <ul>
  <% article.errors.each do |error| %>
    <li><%= error.full_message %></li>
  <% end %>
  </ul>
<% end %>

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= title %></h5>
    <p class="card-text">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </p>
    <p class="card-text">
        <%= form.label :content %>
        <%= form.text_area :content %>
    </p>
    <p class="card-text">
        <%= form.submit %>
    </p>

  </div>
</div>
<% end %>